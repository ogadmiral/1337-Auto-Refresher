{
    "manifest_version": 3,
    "name": "Auto Refresh and Scroll Up",
    "version": "1.1",
    "description": "Refreshes the page every X seconds and scrolls to the top.",
    "permissions": ["storage", "scripting", "activeTab"],
    "action": {
      "default_popup": "popup.html",
      "default_title": "Auto Refresh & Scroll"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }
  